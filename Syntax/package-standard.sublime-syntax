%YAML 1.2
---

scope: source.Thulium

hidden: true

variables:
  expr: '(\d+([./]\d+)?|Log2\(\d+\)([+\-]\d+)?)'

contexts:

  main:
    - include: package.standard
  
  package.standard:

    # Key
    - match: (1=)(?=[^\^]*\))
      scope: identifier.function.Thulium
      push: 
        - match: ([#b]*)([A-G])([',]*)(?=\))
          captures:
            1: operator.number.Thulium
            2: unsigned.number.Thulium
            3: operator.number.Thulium
        - match: (?=\))
          pop: true
        - match: .
          scope: unidentified.function.Thulium

    # Appoggiatura
    - match: \^(?=.*\))
      scope: identifier.function.Thulium
      push: 
        - match: (?=\))
          pop: true
        - include: Note.sublime-syntax
        - match: .
          scope: unidentified.function.Thulium

    # GraceNote
    - match: (?=[^\)]*\^\))
      push: 
        - match: \^(?=\))
          scope: identifier.function.Thulium
          pop: true
        - include: Note.sublime-syntax
        - match: .
          scope: unidentified.function.Thulium

    # Vol
    - match: (\d+\.?\d*)(%)(?=\))
      captures:
        1: unsigned.number.Thulium
        2: identifier.function.Thulium

    # BarBeat
    - match: (\d+)(/)(\d+)(?=\))
      captures:
        1: unsigned.number.Thulium
        2: identifier.function.Thulium
        3: unsigned.number.Thulium

    # Spd
    - match: (\d+\.?\d*)(?=\))
      scope: unsigned.number.Thulium

    # KeyShift
    - match: ([+\-])(\d+)(?=\))
      captures:
        1: identifier.function.Thulium
        2: unsigned.number.Thulium

    # Tuplet
    - match: (?=\d+~\))
      push: 
        - match: ~
          scope: identifier.function.Thulium
          pop: true
        - include: number.sublime-syntax

    # Tremolo
    - match: (?={{expr}}[=\-]\))
      push: 
        - match: '[=\-]'
          scope: identifier.function.Thulium
          pop: true
        - include: Number.sublime-syntax

